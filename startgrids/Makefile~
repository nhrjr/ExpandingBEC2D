include ../Makefile.inc 

OBJLIBS	= ../libbh3startgrids.a
OBJS	= bh3defaultgrid.o phasegrid.o 

CXXFLAGS	= $(PRJCXXFLAGS) -I../utilities -I../propagators -I. -I../observables
CUFLAGS		= $(PRJCUFLAGS) -I../utilities -I../propagators -I. -I../observables

all: $(OBJLIBS)

../libbh3startgrids.a: $(OBJS)
	$(ECHO) $(AR) $(ARFLAGS) rv ../libbh3startgrids.a $?
	$(AR) $(ARFLAGS) rv ../libbh3startgrids.a $?
	$(ECHO) $(RANLIB) ../libbh3startgrids.a
	$(RANLIB) ../libbh3startgrids.a

clean:
	$(ECHO) cleaning up in bh3startgrids
	-$(RM) -f $(OBJS)

